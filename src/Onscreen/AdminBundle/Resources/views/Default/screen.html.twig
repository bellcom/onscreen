{% extends '::base.html.twig' %}
{% block content %}

    {% include 'OnscreenAdminBundle:Default:nav.html.twig' with {'active' : 2 } %}

    <h2>Screens</h2>

    <div class="row-fluid">
        <table class="table table-striped table-condensed">
            <caption>Available screens</caption>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Path</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for screen in screens %}
                <tr>
                    <td>{{ screen.id }}</td>
                    <td>{{ screen.title }}</td>
                    <td>screen/{{ screen.mashineName }}</td>
                    <td>{% if screen.isActive %}<i class="icon-ok"></i>{% else %}<i class="icon-remove"></i>{% endif %}</td>
                    <td class="actions">
                        <a href="{{ path('screen', {name: screen.mashineName}) }}" class="icon-desktop" title="Preview"></a>
                        <a href="{{ path('_admin_screen_edit', {id : screen.id}) }}" class="icon-edit" title="Edit screen"></a>
                        <a href="{{ path('_admin_screen_delete', {id : screen.id}) }}" class="icon-trash" title="Delete screen"></a>
                    </td>
                </tr>
            {% else %}
                <tr class="error">
                    <td colspan="5" class="center">No screens found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="row-fluid">
        <a href="{{ path('_admin_screen_add') }}" class="btn btn-primary"><i class="icon-plus"></i> Add screen</a>
    </div>
{% endblock %}
